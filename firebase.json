{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast1",
    "rules": "firestore.rules",
          "hosting": {
            "public": "dist",
            "ignore": ["**/.*", "**/node_modules/**"],
            "rewrites": [
              { "source": "**", "destination": "/index.html" }
            ]
          },
    ]
  },
  "extensions": {}
}
